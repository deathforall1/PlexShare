<Window x:Class="PlexShare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlexShare" xmlns:views="clr-namespace:Client.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--adding the dashboard view to the main window of this application-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

        </Grid>
        <Border BorderBrush="Yellow" BorderThickness="2">
            <Grid Grid.Column="0">
                <Border BorderBrush="red" BorderThickness="2">
                    <views:DashboardView HorizontalAlignment="Left"  Loaded="DashboardView_Loaded" />
                </Border>
            </Grid>
        </Border>

    </Grid>
</Window>
